<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/bmw_light_blue">
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient background for button -->
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="@color/bmw_blue"
                android:endColor="@color/bmw_light_blue" />
            
            <!-- Rounded corners -->
            <corners android:radius="8dp" />
            
            <!-- Button stroke -->
            <stroke
                android:width="1dp"
                android:color="@color/bmw_light_blue" />
        </shape>
    </item>
</ripple>
