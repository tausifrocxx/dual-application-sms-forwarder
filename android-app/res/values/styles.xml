<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/bmw_blue</item>
        <item name="colorPrimaryDark">@color/bmw_black</item>
        <item name="colorAccent">@color/bmw_light_blue</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/bmw_black</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/bmw_white</item>
        <item name="android:textColorSecondary">@color/bmw_gray</item>
        
        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Button style -->
        <item name="buttonStyle">@style/BMWButton</item>
        
        <!-- Text appearance -->
        <item name="android:textViewStyle">@style/BMWTextView</item>
    </style>

    <!-- BMW-styled button -->
    <style name="BMWButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/bmw_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- BMW-styled text -->
    <style name="BMWTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/bmw_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- BMW-styled heading -->
    <style name="BMWHeading" parent="BMWTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bmw_blue</item>
    </style>

    <!-- BMW-styled status text -->
    <style name="BMWStatus" parent="BMWTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
